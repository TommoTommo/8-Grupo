<%- include('./partials/head') %>

<body>
 <% if (locals.user != null){%>
	<%- include('./partials/headerLogueado')  %>
 <%}  else {%>
	<%- include('./partials/header') %>
<%}%>
 	

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">Nombre del producto:<%= product.nombre %> </h2> 
			<p class="product-detail-description">
				<a href="product-add.html">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= product.imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						Descripción:<%=  product.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					
						<article>


<section class="comments">
						<article>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
								<a href="profile.html"></a> 
								
								<% for( let i = 0; i < product.comment2.length; i++ ) { %>
									<strong>Nombre usuario:<%= product.user1.nombre %> Comentario: <%= product.comment2.comentarios %> </strong>
									<% } %>
							
							</p>
							</div>
						</article>

						<% for( let i = 0; i < product.comment2.length; i++ ) { %>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="profile.html">Nombre u suario: <%= product.user1.nombre %></a> </strong>
									<%= product.comment2.comentarios %></p>
							</div>

							<% } %>
						</article>
						
					
						

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
</body>
