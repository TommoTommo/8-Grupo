<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Editar mi perfil</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <form action="/home" method="GET" class="editprofile">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>

            <label for="usuario">Usuario:</label>
            <input type="text" id="usuario" name="usuario" required><br><br>

            <label for="contraseña">Contraseña:</label>
            <input type="password" id="password" name="password" required><br><br>

            <label for="fecha_nacimiento">Fecha de nacimiento:</label>
            <input type="date" id="date" name="date" required><br><br>

            <label for="nro_documento">Número de documento:</label>
            <input type="number" id="dni" name="dni" required><br><br>

            <input type="submit" value="Enviar">
        </form>

</body>

