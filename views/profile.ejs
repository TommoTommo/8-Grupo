<%- include('./partials/head') -%>

<body>
    <% if (locals.user != null) { %>
        <%- include('./partials/headerLogueado') -%>
    <% } else { %>
        <%- include('./partials/header') -%>
    <% } %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=userdata.imagen %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					
					<h1 class="main-title"> Nombre Usuario:<%=userdata.nombre%>

					<% if (locals.user != null) { %>
						<% if (locals.user.id == userdata.id) { %>
							<a href="/user/profile/edit/<%=userdata.id%>">
								<i class="fas fa-cog"></i>
							</a>
						<% } %>
					<% } %>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						
						<li>Mail: <%=userdata.email %></li>
						<ol>
							<!-- Lista de productos -->
							
						

					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos (<%=userdata.product.length%> total)</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < userdata.product.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= userdata.product[i].id %>">
						<figure class="product-box_image">
							 </li>
							<img src="<%= userdata.product[i].imagen %>" alt="producto">
						</figure>
						<article class="product-box_data">
							<h2><%=userdata.product[i].nombre%></h2>
							<p><%=userdata.product[i].descripcion%></p>
							
					
						</article>
					</a>
				</section>
				</div>
			<% } %>
	</div>


	<!-- /Mis productos -->
</body>
<%- include('./partials/footer') %>