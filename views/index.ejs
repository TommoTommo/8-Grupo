  

 <%- include('./partials/head') %>

<body>
 <% if (locals.user != null){%>
	<%- include('./partials/headerLogueado')  %>
 <%}  else {%>
	<%- include('./partials/header') %>
<%}%>
 	

 
  	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < listaProductos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/product/id/<%= listaProductos[i].id %>">
					  <figure class="product-box_image">
						<img src="<%= listaProductos[i].imagen %>" alt="cafetera moulinex">
					  </figure>
					  <article class="product-box_data">
						<h2><%= listaProductos[i].nombre %> </h2>
						<p><%= listaProductos[i].descripcion %> </p>
						<p>Comentarios: 12</p>
					  </article>
					</a>
				  </section>
				</div>
				<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->

			
		</div>
	</div>
	<!-- /Más comentados -->
</body>
<%- include('./partials/footer') %>